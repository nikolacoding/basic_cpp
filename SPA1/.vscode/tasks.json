{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${workspaceFolder}\\src\\*.cpp",
                "${workspaceFolder}\\src\\passenger\\*.cpp",
                "${workspaceFolder}\\src\\cargo\\*.cpp",
                "${workspaceFolder}\\src\\shared\\*.cpp",
                "-o",
                "${workspaceFolder}\\bin\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": { 
                "kind": "build",
                "isDefault": true
        },
            "detail": ""
        }
    ],
    "version": "2.0.0"
}